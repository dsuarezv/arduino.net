<UserControl xmlns:net="clr-namespace:arduino.net"  x:Class="arduino.net.CapturePointsPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Expander Header="Captures" IsExpanded="True" Style="{DynamicResource PadExpanderStyle}">
            <ListBox Name="MainListBox" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <net:CaptureMonitorControl />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Expander>
    </Grid>
</UserControl>
