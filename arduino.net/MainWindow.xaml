<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:arduino.net" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" x:Class="arduino.net.MainWindow"
        Title="MainWindow" Height="900" Width="900"
        WindowStyle="SingleBorderWindow" ResizeMode="CanResizeWithGrip" Loaded="Window_Loaded" Icon="arduino-icon2.ico">
    <Grid Width="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Border Grid.Row="1" Padding="10,10,10,10" Background="{DynamicResource C0}">
            <Grid Grid.Row="1">
                <Button x:Name="BuildButton" Content="Build" Click="BuildButton_Click" Template="{DynamicResource LargeActionButton}" Width="76" Height="76" FontSize="18.667" BorderThickness="1" Margin="0,0,796,1"/>
                <Button x:Name="DeployButton" Content="Deploy" Click="DeployButton_Click" Template="{DynamicResource LargeActionButton}" Margin="81,1.271,715,-0.272" Width="76" Height="76" FontSize="18.667"/>
                <Button x:Name="RunButton" Content="Run" Click="RunButton_Click" Template="{DynamicResource LargeActionButton}" Height="47" Margin="165.404,0,659.595,0" VerticalAlignment="Top" Width="47"/>
                <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" IsEnabled="False" Template="{DynamicResource LargeActionButton}" Height="47" Margin="219.831,0,605.168,0" VerticalAlignment="Top" Width="47"/>
                <local:StatusHeaderControl x:Name="StatusControl" Width="auto" HorizontalAlignment="Left" Margin="271.831,1.272,0,-1.272"/>
            </Grid>
        </Border>

        

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200px" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter 
				Grid.Column="0"
				HorizontalAlignment="Right"
				VerticalAlignment="Stretch"
				Background="#b6b6b6" 
				ShowsPreview="True"
				Width="1"/>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <local:RegistersPad x:Name="RegistersPad" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <local:MemoryDumpPad x:Name="MemDumpPad" Grid.Row="1"/>
                <local:WatchesPad x:Name="WatchesPad" Grid.Row="2" />

                <GridSplitter
                    Grid.Row="0"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                    Background="#b6b6b6" 
				    ShowsPreview="True"
				    Height="1"/>

                <GridSplitter
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                    Background="#b6b6b6" 
				    ShowsPreview="True"
				    Height="1"/>



            </Grid>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="109*"/>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="574*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="150px"/>
                </Grid.RowDefinitions>

                <GridSplitter
					Grid.Row="0"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Bottom"
					Background="#b6b6b6" 
					ShowsPreview="True"
					Height="1" Grid.ColumnSpan="3"/>

                <TabControl Name="OpenFilesTab" BorderThickness="0,1,0,0" Grid.Row="0" Margin="0,5" Grid.ColumnSpan="3">

                </TabControl>
                <local:OutputTextBox x:Name="OutputTextBox1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Padding="5" Grid.ColumnSpan="3"/>



            </Grid>

        </Grid>
    </Grid>
</Window>
