<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf" x:Class="arduino.net.CaptureMonitorControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock TextWrapping="Wrap" Height="33" VerticalAlignment="Top" Margin="0,0,0,0" HorizontalAlignment="Center" Text="{Binding SymbolToTrace}"/>
        <TextBlock TextWrapping="Wrap" Height="33" VerticalAlignment="Top" Margin="0,34,0,0" HorizontalAlignment="Center" Text="{Binding LastValue}"/>
    </Grid>
</UserControl>
