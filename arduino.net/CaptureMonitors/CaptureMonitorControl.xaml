<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf" x:Class="arduino.net.CaptureMonitorControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Height="30" Margin="0,0,0,15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="2" BorderBrush="{DynamicResource C1}" CornerRadius="4" >
            <TextBlock Margin="10,0" TextWrapping="Wrap" Text="{Binding SymbolToTrace}" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        </Border>
        <Grid Name="Container" Margin="0,45,0,0" />



    </Grid>
</UserControl>
