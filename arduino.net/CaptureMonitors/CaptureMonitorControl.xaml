<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf" x:Class="arduino.net.CaptureMonitorControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <TextBlock Name="TitleTextBlock" Height="30" TextWrapping="Wrap" Text="{Binding SymbolToTrace}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Style="{DynamicResource CaptureTitleStyle}" />

        <Grid Name="Container" Margin="0,30,0,0" />

    </Grid>
</UserControl>
